# Параметры сборки
strict: true # Cтрогий режим сборки, все предупреждения отображаются как ошибки
breaks: false # Переносить ли строки по символу перевода каретки

allowHTML: true # Разрешить inline-html

singlePage: true # Нужно ли собирать одностраничник

# Параметры отображения в интерфейсе
docs-viewer:
  project-name: yt_sync # Будет использоваться для формирования url-а проекта на сайте

  releasers: #  задаёт список пользователей, которые имеют право релизить задеплоенный проект из тестинга в прод
    - ashishkin
    - bulatman
    - ifsmirnov
    - dgolear

  index-page: # Настройка отображения карточки проекта на разводящей
    hidden: false
    title: YtSync # Используется для формирования логотипа проекта в шапке сайта
    description: Библиотека для управления YT-таблицами (схема/атрибуты/репликация/коллокация, и т.п.). # Описание в карточке проекта

  feedback: # Настройка рассылки о лайках, дизлайках, комментах
    notifications:
      interval: daily
      receivers:
        - ashishkin
        - ifsmirnov
        - dgolear

  auto-release-to: # Настройка авторелиза
    testing: true
    prod: false
